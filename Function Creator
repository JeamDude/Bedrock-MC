<body>
  <div class="container">
    <h3>Generador de funciones de Minecraft Bedrock</h3>
    <div class="card-panel">
      <div class="input-field">
        <input id="commandInput" type="text">
        <label for="commandInput">Ingresa los comandos separados por punto y coma (;)</label>
      </div>
      <button class="btn waves-effect waves-light" onclick="generateFunction()">Generar función</button>
      <a id="downloadLink" class="btn waves-effect waves-light disabled" download>Descargar función</a>
    </div>
  </div>

  <script>
    function generateFunction() {
      var commands = document.getElementById('commandInput').value;
      var commandsArray = commands.split(';');
      var functionContent = '';

      for (var i = 0; i < commandsArray.length; i++) {
        functionContent += commandsArray[i].trim() + '\n';
      }

      var file = new Blob([functionContent], { type: 'text/plain' });
      var downloadLink = document.getElementById('downloadLink');
      downloadLink.href = URL.createObjectURL(file);
      downloadLink.classList.remove('disabled');
    }
  </script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>

